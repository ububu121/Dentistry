<Window x:Class="Dentistry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Вход в систему" Height="244" Width="340">
    <Grid Background="#6da6c7">
        <Label Background="#18468c" x:Name="login" Content="Логин" HorizontalAlignment="Left" Margin="66,24,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" Width="65"/>
        <Label Background="#18468c" x:Name="password" Content="Пароль" HorizontalAlignment="Left" Margin="66,84,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="txtlogin" HorizontalAlignment="Left" Height="31" Margin="138,24,0,0" TextWrapping="Wrap" Text="beloysov" VerticalAlignment="Top" Width="120" Foreground="Black" FontSize="16"/>
        <PasswordBox x:Name="txtpass" HorizontalAlignment="Left" Height="31" Margin="138,84,0,0" Password="beloysov" Width="120" VerticalAlignment="Top" Foreground="Black" FontSize="16"/>
        <Button x:Name="btn_entr" Content="Вход" HorizontalAlignment="Left" Margin="107,139,0,0" VerticalAlignment="Top" Width="88" Click="Btn_entr_Click" FontSize="16" Height="34"/>

    </Grid>
</Window>
